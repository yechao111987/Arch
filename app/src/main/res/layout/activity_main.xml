<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.demo.yechao.arch.MainActivity" tools:layout_editor_absoluteY="25dp"
        tools:layout_editor_absoluteX="0dp">


    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2" app:layout_constraintGuide_begin="130dp"
                                          android:orientation="vertical" tools:layout_editor_absoluteY="0dp"
                                          tools:layout_editor_absoluteX="130dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline3" app:layout_constraintGuide_begin="200dp"
                                          android:orientation="horizontal" tools:layout_editor_absoluteY="200dp"
                                          tools:layout_editor_absoluteX="0dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="horizontal" app:layout_constraintGuide_begin="100dp"
                                          tools:layout_editor_absoluteY="100dp" tools:layout_editor_absoluteX="0dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline4" app:layout_constraintGuide_begin="50dp"
                                          android:orientation="horizontal" tools:layout_editor_absoluteY="50dp"
                                          tools:layout_editor_absoluteX="0dp"/>
    <TextView
            android:text="Area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/area"
            android:textSize="18sp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginTop="1dp" app:layout_constraintLeft_toLeftOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline4" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price"
            android:textSize="18sp"
            android:layout_marginStart="16dp" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline4"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline" android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="89"
            android:ems="10"
            android:id="@+id/area_text"
            android:textSize="14sp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline4" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="20000"
            android:ems="10"
            android:id="@+id/price_text"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2" app:layout_constraintTop_toTopOf="@+id/guideline4"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline" app:layout_constraintVertical_bias="0.0"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline5" app:layout_constraintGuide_begin="150dp"
                                          android:orientation="horizontal" tools:layout_editor_absoluteY="150dp"
                                          tools:layout_editor_absoluteX="0dp"/>
    <TextView
            android:text="PercentsOfPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/percents"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline5" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
            android:text="CommerialRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rate"
            tools:layout_editor_absoluteX="14dp" app:layout_constraintTop_toTopOf="@+id/guideline5"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline3"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline6" app:layout_constraintGuide_begin="250dp"
                                          android:orientation="horizontal" tools:layout_editor_absoluteY="250dp"
                                          tools:layout_editor_absoluteX="0dp"/>
    <TextView
            android:text="NumOfRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nums"
            app:layout_constraintRight_toLeftOf="@+id/guideline2"
            android:layout_marginRight="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="@+id/guideline3"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline6" app:layout_constraintHorizontal_bias="0.558"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="0.3"
            android:ems="10"
            android:id="@+id/paypercent_text"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            android:layout_marginTop="10dp" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2" android:textSize="14sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="0.049"
            android:ems="10"
            android:id="@+id/rate_text"
            app:layout_constraintTop_toTopOf="@+id/guideline5"
            android:layout_marginTop="2dp" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2" android:textSize="14sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="1.2"
            android:ems="10"
            android:id="@+id/num_text"
            app:layout_constraintTop_toTopOf="@+id/guideline3"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline6" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2"
            app:layout_constraintVertical_bias="0.222"/>
    <Button
            android:text="Do"
            android:layout_width="77dp"
            android:layout_height="37dp"
            android:id="@+id/button"
            app:layout_constraintRight_toLeftOf="@+id/guideline2"
            android:layout_marginRight="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.513" android:layout_marginBottom="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="157dp"
            android:layout_height="195dp"
            android:id="@+id/result_view"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2" app:layout_constraintTop_toTopOf="@+id/guideline6"
            android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.506"/>
    <RadioButton
            android:text="等额本息"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/interest_radio"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="@+id/guideline6"
            android:layout_marginTop="8dp" android:textSize="10sp"/>
    <RadioButton
            android:text="等额本息"
            android:layout_height="30dp"
            tools:layout_editor_absoluteX="8dp" android:id="@+id/principal_radio"
            android:layout_width="100dp" android:layout_marginTop="-1dp"
            app:layout_constraintTop_toBottomOf="@+id/interest_radio" android:textSize="10sp"/>
    <RadioButton
            android:text="RadioButton"
            android:layout_width="100dp"
            android:layout_height="30dp"
            tools:layout_editor_absoluteX="8dp" android:id="@+id/radioButton3"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/principal_radio"
            android:textSize="10sp"/>
    <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"/>


</android.support.constraint.ConstraintLayout>
