<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.demo.yechao.arch.MainActivity" tools:layout_editor_absoluteY="25dp"
        tools:layout_editor_absoluteX="0dp">


    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline10" app:layout_constraintGuide_begin="130dp"
                                          android:orientation="vertical" tools:layout_editor_absoluteY="0dp"
                                          tools:layout_editor_absoluteX="130dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline101" app:layout_constraintGuide_begin="50dp"
                                          android:orientation="horizontal" tools:layout_editor_absoluteY="50"
                                          tools:layout_editor_absoluteX="0dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline102"
                                          android:orientation="horizontal" app:layout_constraintGuide_begin="100dp"
                                          tools:layout_editor_absoluteY="100dp" tools:layout_editor_absoluteX="0dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline103" app:layout_constraintGuide_begin="150dp"
                                          android:orientation="horizontal" tools:layout_editor_absoluteY="30dp"
                                          tools:layout_editor_absoluteX="0dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline104" app:layout_constraintGuide_begin="200dp"
                                          android:orientation="horizontal" tools:layout_editor_absoluteY="30dp"
                                          tools:layout_editor_absoluteX="0dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline105" app:layout_constraintGuide_begin="250dp"
                                          android:orientation="horizontal" tools:layout_editor_absoluteY="30dp"
                                          tools:layout_editor_absoluteX="0dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline106" app:layout_constraintGuide_begin="300dp"
                                          android:orientation="horizontal" tools:layout_editor_absoluteY="30dp"
                                          tools:layout_editor_absoluteX="0dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline107" app:layout_constraintGuide_begin="350dp"
                                          android:orientation="horizontal" tools:layout_editor_absoluteY="30dp"
                                          tools:layout_editor_absoluteX="0dp"/>
    <TextView
            android:text="面积(平方米)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/area"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp" app:layout_constraintLeft_toLeftOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline101" app:layout_constraintVertical_bias="0.75"
            app:layout_constraintRight_toLeftOf="@+id/guideline10" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="价格(元)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price"
            android:textSize="20sp"
            android:layout_marginStart="16dp" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline101"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline102" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintVertical_bias="0.529"
            app:layout_constraintRight_toLeftOf="@+id/guideline10" android:layout_marginRight="8dp"/>
    <TextView
            android:text="公积金贷款(元)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/houseFund"
            android:textSize="20sp"
            android:layout_marginStart="16dp" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline102"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline103" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintVertical_bias="0.529"
            app:layout_constraintRight_toLeftOf="@+id/guideline10" android:layout_marginRight="8dp"/>
    <TextView
            android:text="贷款期限(月)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/month"
            android:textSize="20sp"
            android:layout_marginStart="16dp" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline103"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline104" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintVertical_bias="0.529"
            app:layout_constraintRight_toLeftOf="@+id/guideline10" android:layout_marginRight="8dp"/>

    <TextView
            android:text="商贷利率(%)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rate"
            app:layout_constraintTop_toTopOf="@+id/guideline105"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline104"
            app:layout_constraintRight_toLeftOf="@+id/guideline10"
            android:layout_marginRight="8dp" app:layout_constraintVertical_bias="0.529" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:textSize="20sp"/>
    <TextView
            android:text="首付比例(成)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/percents"
            app:layout_constraintTop_toTopOf="@+id/guideline106"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline107"
            app:layout_constraintRight_toLeftOf="@+id/guideline10"
            android:layout_marginRight="8dp" app:layout_constraintVertical_bias="0.4" android:textSize="20sp"/>
    <TextView
            android:text="利率浮动(倍数)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nums"
            app:layout_constraintRight_toLeftOf="@+id/guideline10"
            android:layout_marginRight="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="@+id/guideline105"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline106" app:layout_constraintHorizontal_bias="0.558"
            app:layout_constraintVertical_bias="0.0" android:textSize="20sp"/>
    <TextView
            android:text="还款信息:"
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:id="@+id/result_view"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline10" app:layout_constraintTop_toTopOf="@+id/guideline107"
            android:layout_marginTop="11dp" app:layout_constraintHorizontal_bias="0.162"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal"
            android:text="89"
            android:ems="10"
            android:id="@+id/area_text"
            android:textSize="20sp"
            android:layout_marginStart="8dp" android:layout_marginEnd="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline101" android:layout_marginLeft="-22dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline10" android:textColor="@color/colorPrimaryDark"
            app:layout_constraintVertical_bias="0.51"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="20000"
            android:ems="10"
            android:id="@+id/price_text"
            android:textSize="20sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline10" app:layout_constraintTop_toTopOf="@+id/guideline101"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline102" app:layout_constraintVertical_bias="0.51"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="500000"
            android:ems="10"
            android:id="@+id/houseFund_text"
            android:textSize="20sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline10" app:layout_constraintTop_toTopOf="@+id/guideline102"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline103" app:layout_constraintVertical_bias="0.53999996"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="360"
            android:ems="10"
            android:id="@+id/month_text"
            android:textSize="20sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline10" app:layout_constraintTop_toTopOf="@+id/guideline103"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline104" app:layout_constraintVertical_bias="0.0"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="3"
            android:ems="10"
            android:id="@+id/paypercent_text"
            app:layout_constraintTop_toTopOf="@+id/guideline106"
            android:layout_marginTop="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline10" android:textSize="20sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline107" app:layout_constraintVertical_bias="0.5"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal"
            android:text="4.9"
            android:ems="10"
            android:id="@+id/rate_text"
            app:layout_constraintTop_toTopOf="@+id/guideline105"
            android:layout_marginTop="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline10" android:textSize="20sp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline104"
            app:layout_constraintVertical_bias="0.534"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|number"
            android:text="1.2"
            android:ems="10"
            android:id="@+id/num_text"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@+id/guideline105"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline106" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline10"
            app:layout_constraintVertical_bias="0.48000002"
    />
    <Button
            android:text="Do"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintRight_toLeftOf="@+id/guideline10"
            android:layout_marginRight="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.513" android:layout_marginBottom="8dp"/>
    <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"/>
    <RadioGroup android:layout_width="100dp" android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="@+id/guideline107" tools:layout_editor_absoluteX="5dp"
                android:layout_marginTop="8dp">
        <RadioButton
                android:text="等额本息"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:id="@+id/interest_radio"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="@+id/guideline106"
                android:layout_marginTop="8dp" android:textSize="10sp"/>
        <RadioButton
                android:text="等额本金"
                android:layout_height="20dp" app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteX="8dp" android:id="@+id/principal_radio"
                android:layout_marginLeft="8dp"
                android:layout_width="100dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/interest_radio" android:textSize="10sp"/>
    </RadioGroup>
</android.support.constraint.ConstraintLayout>
